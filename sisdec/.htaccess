# Habilitar el motor de reescritura
RewriteEngine On

# Bloquear acceso a archivos sensibles
<FilesMatch "\.(htaccess|htpasswd|cfg|sql|ini|log|sh|env|json)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Evitar el listado de directorios
Options -Indexes

# Manejo de Error
ErrorDocument 401 /public/401.php
ErrorDocument 403 /public/403.php
ErrorDocument 404 /public/404.php
ErrorDocument 500 /public/500.php

